{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "strict": false,                              
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                       
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "resolveJsonModule": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/models/*"],
      "@src/*": ["src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@database/*": ["./src/database/*"],
      "@views/*": ["./src/views/*"],
      "@utils/*": ["./src/utils/*"]
    } 
  },
  "include": [
    "src/**/*"
  ]
}
