  "scripts": {
    "start": "node dist/server.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly --ignore-watch node_modules --no-notify src/server.ts",
    "test": "SET NODE_ENV=test & jest --runInBand --detectOpenHandles --forceExit",
    "test-coverage": "SET NODE_ENV=test & jest --coverage --runInBand --detectOpenHandles --forceExit",
    "test-linux": "NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit",
    "test-linux-coverage": "NODE_ENV=test jest --coverage --runInBand --detectOpenHandles --forceExit"
  },
